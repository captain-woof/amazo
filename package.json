    "price",
    "tracker",
    "amazo"
  ],
  "author": "Sohail Saha (aka CaptainWoof)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/captain-woof/amazo/issues"
  },
  "homepage": "https://github.com/captain-woof/amazo#readme",
  "dependencies": {
    "amazon-buddy": "^2.2.37",
    "connect-mongo": "^4.4.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "formidable": "^1.2.2",
    "mongoose": "^5.13.7",
    "nodemailer": "^6.6.3"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
