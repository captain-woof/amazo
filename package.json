{
  "name": "amazo",
  "version": "1.0.0",
  "description": "A price-tracker for Amazon; see how product prices fluctuate on Amazon and know the best time to buy. :)",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node main.js",
    "dev": "concurrently -k \"npm run dev_backend\" \"npm run dev_frontend\"",
